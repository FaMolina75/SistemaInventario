<Window x:Class="InvemtarioHadware.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema de Gestión de Inventario IT" Height="650" Width="950" WindowStartupLocation="CenterScreen">

    <Grid Background="#F0F0F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#333333">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="150"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="DASHBOARD DE INVENTARIO" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="Panel de Control General" Foreground="#DDDDDD" FontSize="14" HorizontalAlignment="Center"/>
                </StackPanel>

                <Button Grid.Column="2" Content="⬅ Cerrar Sesión" Height="30" Width="120" 
                        Background="#D32F2F" Foreground="White" FontWeight="Bold" 
                        HorizontalAlignment="Center" VerticalAlignment="Center" 
                        Click="btnCerrarSesion_Click" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>

            <Button Grid.Row="0" Grid.Column="0" Margin="10" Background="#2196F3" Click="Button_Hardware_Click" Cursor="Hand">
                <StackPanel>
                    <TextBlock Text="💻" FontSize="40" HorizontalAlignment="Center"/>
                    <TextBlock Text="Gestión de Hardware" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,10,0,0"/>
                    <TextBlock Text="Altas, Bajas y Modificaciones" Foreground="#E3F2FD" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Grid.Row="0" Grid.Column="1" Margin="10" Background="#FF9800" Click="Button_Mantenimiento_Click" Cursor="Hand">
                <StackPanel>
                    <TextBlock Text="🔧" FontSize="40" HorizontalAlignment="Center"/>
                    <TextBlock Text="Mantenimiento" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,10,0,0"/>
                    <TextBlock Text="Reparaciones y Proveedores" Foreground="#FFF3E0" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Grid.Row="0" Grid.Column="2" Margin="10" Background="#4CAF50" Click="Button_Asignaciones_Click" Cursor="Hand">
                <StackPanel>
                    <TextBlock Text="👤" FontSize="40" HorizontalAlignment="Center"/>
                    <TextBlock Text="Asignaciones" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,10,0,0"/>
                    <TextBlock Text="Entregas a Empleados" Foreground="#E8F5E9" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Grid.Row="1" Grid.Column="0" Margin="10" Background="#607D8B" Click="Button_Catalogos_Click" Cursor="Hand">
                <StackPanel>
                    <TextBlock Text="📋" FontSize="40" HorizontalAlignment="Center"/>
                    <TextBlock Text="Catálogos" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,10,0,0" HorizontalAlignment="Center"/>
                    <TextBlock Text="Marcas, Modelos y Tipos" Foreground="#CFD8DC" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Grid.Row="1" Grid.Column="1" Margin="10" Background="#9C27B0" Click="Button_Ubicaciones_Click" Cursor="Hand">
                <StackPanel>
                    <TextBlock Text="📍" FontSize="40" HorizontalAlignment="Center"/>
                    <TextBlock Text="Ubicaciones" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,10,0,0"/>
                    <TextBlock Text="Sedes y Oficinas" Foreground="#F3E5F5" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button x:Name="btnUsuarios" Grid.Row="1" Grid.Column="2" Margin="10" Background="#3F51B5" Click="Button_Usuarios_Click" Cursor="Hand">
                <StackPanel>
                    <TextBlock Text="🔐" FontSize="40" HorizontalAlignment="Center"/>
                    <TextBlock Text="Seguridad" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,10,0,0"/>
                    <TextBlock Text="Usuarios y Roles" Foreground="#E8EAF6" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Margin="10,5,10,10" Background="#546E7A" Click="Button_Reportes_Click" Cursor="Hand">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="📄" FontSize="28" Margin="0,0,15,0" VerticalAlignment="Center"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="CENTRO DE REPORTES Y ESTADÍSTICAS" FontSize="16" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Generación de informes PDF" FontSize="12" Foreground="#CFD8DC"/>
                    </StackPanel>
                </StackPanel>
            </Button>

        </Grid>
    </Grid>
</Window>