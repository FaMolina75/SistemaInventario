<Window x:Class="InvemtarioHadware.Vistas.ControlAsignaciones"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Control de Asignaciones" Height="550" Width="900" WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="15" Margin="0,0,10,0">
            <StackPanel>
                <TextBlock Text="Nueva Asignación" FontWeight="Bold" FontSize="18" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <Label Content="Seleccionar Equipo (Serie):" FontWeight="SemiBold"/>
                <ComboBox x:Name="cbHardware" Height="30" Margin="0,0,0,15"
                          DisplayMemberPath="SerieModelo" SelectedValuePath="idHardware"/>

                <Label Content="Asignar al Empleado:" FontWeight="SemiBold"/>
                <DockPanel Margin="0,0,0,15">
                    <Button x:Name="btnGestionarEmpleados" Content="⚙" Width="30" Height="30" DockPanel.Dock="Right" Background="#DDD" Click="btnGestionarEmpleados_Click" ToolTip="Administrar Empleados"/>
                    <ComboBox x:Name="cbEmpleado" Height="30" DisplayMemberPath="Nombre" SelectedValuePath="idEmpleado"/>
                </DockPanel>

                <Label Content="Fecha de Entrega:" FontWeight="SemiBold"/>
                <DatePicker x:Name="dpFechaAsignacion" Height="30" Margin="0,0,0,20"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <Button x:Name="btnAsignar" Content="REGISTRAR" Height="35" Width="120" Background="#2196F3" Foreground="White" FontWeight="Bold" Click="btnAsignar_Click" Margin="0,0,5,0"/>
                    <Button x:Name="btnCancelar" Content="CANCELAR" Height="35" Width="100" Background="#9E9E9E" Foreground="White" FontWeight="Bold" Click="btnCancelar_Click" Visibility="Collapsed"/>
                </StackPanel>

                <TextBlock Text="*Para 'Devolver' un equipo, selecciona la fila en la tabla y pulsa abajo." TextWrapping="Wrap" FontSize="10" Foreground="Gray" Margin="0,10,0,5"/>
                <Button x:Name="btnDevolver" Content="MARCAR COMO DEVUELTO" Height="30" Background="#FF9800" Foreground="White" Click="btnDevolver_Click"/>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Historial de Asignaciones" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

            <DataGrid x:Name="dgAsignaciones" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False" SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding idAsignacion}" Width="40"/>
                    <DataGridTextColumn Header="Equipo (Serie)" Binding="{Binding Serie}" Width="*"/>
                    <DataGridTextColumn Header="Empleado" Binding="{Binding NombreEmpleado}" Width="*"/>
                    <DataGridTextColumn Header="Fecha Entrega" Binding="{Binding FechaAsignacion, StringFormat=d}" Width="100"/>
                    <DataGridTextColumn Header="Fecha Devolución" Binding="{Binding FechaDevolucion, TargetNullValue='ACTIVO'}" Width="120"/>
                    
                    <!-- COLUMNA DE ACCIONES -->
                    <DataGridTemplateColumn Header="Acciones" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Editar" Margin="2" Padding="5,0" Background="#2196F3" Foreground="White" Click="btnEditar_Click"/>
                                    <Button Content="Eliminar" Margin="2" Padding="5,0" Background="#F44336" Foreground="White" Click="btnEliminar_Click"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>