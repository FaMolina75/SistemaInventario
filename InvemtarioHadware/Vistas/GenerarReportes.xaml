<Window x:Class="InvemtarioHadware.Vistas.GenerarReportes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Centro de Reportes" Height="400" Width="600" WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Border BorderBrush="#607D8B" BorderThickness="1" CornerRadius="10" Padding="20">
            <StackPanel>
                <TextBlock Text="Generador de Reportes" FontSize="22" FontWeight="Bold" Foreground="#607D8B" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="Seleccione el tipo de informe:" FontWeight="SemiBold" Margin="0,0,0,10"/>

                <StackPanel Margin="20,0,0,20">
                    <RadioButton x:Name="rbInventario" Content="Inventario General (Completo)" GroupName="Reportes" IsChecked="True" FontSize="14" Margin="0,0,0,10"/>

                    <RadioButton x:Name="rbAsignaciones" Content="Historial de Asignaciones (Movimientos de Personal)" GroupName="Reportes" FontSize="14" Margin="0,0,0,10"/>

                    <RadioButton x:Name="rbMantenimientos" Content="Bitácora de Mantenimientos y Costos" GroupName="Reportes" FontSize="14" Margin="0,0,0,10"/>
                </StackPanel>

                <Separator Margin="0,0,0,20"/>

                <Button x:Name="btnGenerar" Content="📄 DESCARGAR PDF" Height="45" Background="#607D8B" Foreground="White" FontWeight="Bold" FontSize="16" Click="btnGenerar_Click"/>

                <TextBlock x:Name="lblRestriccion" Text="* Algunas opciones están bloqueadas por tu nivel de usuario." Foreground="Red" FontSize="11" Margin="0,10,0,0" Visibility="Collapsed" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>