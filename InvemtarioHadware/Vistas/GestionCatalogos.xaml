<Window x:Class="InvemtarioHadware.Vistas.GestionCatalogos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Catálogos del Sistema" Height="600" Width="700" WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <TextBlock Text="Gestión de Catálogos" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,15"/>

        <TabControl Margin="0,30,0,0">

            <TabItem Header="Marcas">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <Label Content="Buscar Marca:"/>
                        <TextBox x:Name="txtBuscarMarca" Height="25" Margin="0,0,0,5" TextChanged="txtBuscarMarca_TextChanged"/>
                        
                        <Label Content="ID Marca:" Margin="0,10,0,0"/>
                        <TextBox x:Name="txtIdMarca" Height="25" Margin="0,0,0,5" IsReadOnly="True" Background="#F0F0F0"/>
                        
                        <Label Content="Nombre Marca:"/>
                        <TextBox x:Name="txtMarca" Height="25" Margin="0,0,0,10"/>
                        
                        <Button Content="AGREGAR" Background="#009688" Foreground="White" Height="30" Margin="0,0,0,5" Click="btnAgregarMarca_Click"/>
                        <Button Content="ACTUALIZAR" Background="#FF9800" Foreground="White" Height="30" Margin="0,0,0,5" Click="btnActualizarMarca_Click"/>
                        <Button Content="ELIMINAR" Background="#F44336" Foreground="White" Height="30" Margin="0,0,0,5" Click="btnEliminarMarca_Click"/>
                        <Button Content="LIMPIAR" Background="#607D8B" Foreground="White" Height="30" Click="btnLimpiarMarca_Click"/>
                    </StackPanel>

                    <DataGrid x:Name="dgMarcas" Grid.Column="1" AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="dgMarcas_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding idMarca}" Width="50"/>
                            <DataGridTextColumn Header="Marca" Binding="{Binding NombreMarca}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="Tipos de Hardware">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <Label Content="Buscar Tipo:"/>
                        <TextBox x:Name="txtBuscarTipo" Height="25" Margin="0,0,0,5" TextChanged="txtBuscarTipo_TextChanged"/>
                        
                        <Label Content="ID Tipo:" Margin="0,10,0,0"/>
                        <TextBox x:Name="txtIdTipo" Height="25" Margin="0,0,0,5" IsReadOnly="True" Background="#F0F0F0"/>
                        
                        <Label Content="Nombre Tipo:"/>
                        <TextBox x:Name="txtTipo" Height="25" Margin="0,0,0,10"/>
                        
                        <Button Content="AGREGAR" Background="#673AB7" Foreground="White" Height="30" Margin="0,0,0,5" Click="btnAgregarTipo_Click"/>
                        <Button Content="ACTUALIZAR" Background="#FF9800" Foreground="White" Height="30" Margin="0,0,0,5" Click="btnActualizarTipo_Click"/>
                        <Button Content="ELIMINAR" Background="#F44336" Foreground="White" Height="30" Margin="0,0,0,5" Click="btnEliminarTipo_Click"/>
                        <Button Content="LIMPIAR" Background="#607D8B" Foreground="White" Height="30" Click="btnLimpiarTipo_Click"/>
                    </StackPanel>

                    <DataGrid x:Name="dgTipos" Grid.Column="1" AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="dgTipos_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding idTipoHardware}" Width="50"/>
                            <DataGridTextColumn Header="Tipo" Binding="{Binding NombreTipo}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="Modelos">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <Label Content="Buscar Modelo:"/>
                        <TextBox x:Name="txtBuscarModelo" Height="25" Margin="0,0,0,5" TextChanged="txtBuscarModelo_TextChanged"/>
                        
                        <Label Content="ID Modelo:" Margin="0,10,0,0"/>
                        <TextBox x:Name="txtIdModelo" Height="25" Margin="0,0,0,5" IsReadOnly="True" Background="#F0F0F0"/>
                        
                        <Label Content="Nombre del Modelo:"/>
                        <TextBox x:Name="txtModelo" Height="25" Margin="0,0,0,5"/>

                        <Label Content="Marca:"/>
                        <ComboBox x:Name="cbMarcaModelo" Height="25" Margin="0,0,0,5" DisplayMemberPath="NombreMarca" SelectedValuePath="idMarca"/>

                        <Label Content="Tipo:"/>
                        <ComboBox x:Name="cbTipoModelo" Height="25" Margin="0,0,0,10" DisplayMemberPath="NombreTipo" SelectedValuePath="idTipoHardware"/>

                        <Button Content="AGREGAR" Background="#4CAF50" Foreground="White" Height="30" Margin="0,0,0,5" Click="btnAgregarModelo_Click"/>
                        <Button Content="ACTUALIZAR" Background="#FF9800" Foreground="White" Height="30" Margin="0,0,0,5" Click="btnActualizarModelo_Click"/>
                        <Button Content="ELIMINAR" Background="#F44336" Foreground="White" Height="30" Margin="0,0,0,5" Click="btnEliminarModelo_Click"/>
                        <Button Content="LIMPIAR" Background="#607D8B" Foreground="White" Height="30" Click="btnLimpiarModelo_Click"/>
                    </StackPanel>

                    <DataGrid x:Name="dgModelos" Grid.Column="1" AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="dgModelos_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding idModelo}" Width="50"/>
                            <DataGridTextColumn Header="Modelo" Binding="{Binding NombreModelo}" Width="*"/>
                            <DataGridTextColumn Header="Marca" Binding="{Binding NombreMarca}" Width="100"/>
                            <DataGridTextColumn Header="Tipo" Binding="{Binding NombreTipo}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>