<Window x:Class="InvemtarioHadware.Vistas.GestionEmpleados"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Administrar Empleados" Height="450" Width="700" WindowStartupLocation="CenterScreen">
    
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- PANEL IZQUIERDO: FORMULARIO -->
        <Border Grid.Column="0" BorderBrush="#4CAF50" BorderThickness="1" CornerRadius="5" Padding="15" Margin="0,0,10,0">
            <StackPanel>
                <TextBlock Text="Datos del Empleado" FontWeight="Bold" FontSize="16" Foreground="#4CAF50" Margin="0,0,0,15" HorizontalAlignment="Center"/>

                <Label Content="Nombre Completo:"/>
                <TextBox x:Name="txtNombre" Height="25" Margin="0,0,0,10"/>

                <Label Content="Puesto:"/>
                <TextBox x:Name="txtPuesto" Height="25" Margin="0,0,0,10"/>

                <Label Content="Departamento:"/>
                <TextBox x:Name="txtDepto" Height="25" Margin="0,0,0,20"/>

                <!-- Botones del Formulario -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="btnGuardar" Content="GUARDAR" Height="35" Width="100" Background="#4CAF50" Foreground="White" FontWeight="Bold" Click="btnGuardar_Click" Margin="0,0,5,0"/>
                    <Button x:Name="btnCancelar" Content="CANCELAR" Height="35" Width="100" Background="#9E9E9E" Foreground="White" FontWeight="Bold" Click="btnCancelar_Click" Visibility="Collapsed"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- PANEL DERECHO: TABLA -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Lista de Empleados" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

            <DataGrid x:Name="dgEmpleados" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding idEmpleado}" Width="40"/>
                    <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                    <DataGridTextColumn Header="Puesto" Binding="{Binding Puesto}" Width="100"/>
                    <DataGridTextColumn Header="Depto" Binding="{Binding Departamento}" Width="100"/>

                    <!-- COLUMNA DE ACCIONES -->
                    <DataGridTemplateColumn Header="Acciones" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Editar" Margin="2" Padding="5,0" Background="#2196F3" Foreground="White" Click="btnEditar_Click"/>
                                    <Button Content="Eliminar" Margin="2" Padding="5,0" Background="#F44336" Foreground="White" Click="btnEliminar_Click"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>