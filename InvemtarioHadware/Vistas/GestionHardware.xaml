<Window x:Class="InvemtarioHadware.Vistas.GestionHardware"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Hardware" Height="550" Width="900" WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- PANEL IZQUIERDO: FORMULARIO -->
        <Border Grid.Column="0" BorderBrush="#4CAF50" BorderThickness="1" CornerRadius="5" Padding="15" Margin="0,0,10,0">
            <StackPanel>
                <TextBlock Text="Registro de Activo" FontWeight="Bold" FontSize="16" Foreground="#4CAF50" Margin="0,0,0,15" HorizontalAlignment="Center"/>

                <Label Content="Número de Serie:"/>
                <TextBox x:Name="txtSerie" Height="25" Margin="0,0,0,10"/>

                <Label Content="Modelo:"/>
                <ComboBox x:Name="cbModelo" Height="25" Margin="0,0,0,10" 
                          DisplayMemberPath="NombreModelo" SelectedValuePath="idModelo"/>

                <Label Content="Ubicación:"/>
                <ComboBox x:Name="cbUbicacion" Height="25" Margin="0,0,0,10"
                          DisplayMemberPath="NombreUbicacion" SelectedValuePath="idUbicacion"/>

                <Label Content="Fecha de Compra:"/>
                <DatePicker x:Name="dpFechaCompra" Height="25" Margin="0,0,0,10"/>

                <Label Content="Estado Actual:"/>
                <ComboBox x:Name="cbEstado" Height="25" Margin="0,0,0,20">
                    <ComboBoxItem Content="Operativo" IsSelected="True"/>
                    <ComboBoxItem Content="En Reparación"/>
                    <ComboBoxItem Content="Obsoleto"/>
                    <ComboBoxItem Content="Baja"/>
                </ComboBox>

                <!-- Botones de Acción Formulario -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="btnGuardar" Content="GUARDAR" Height="35" Width="100" Background="#4CAF50" Foreground="White" FontWeight="Bold" Margin="0,0,5,0" Click="btnGuardar_Click"/>
                    <Button x:Name="btnCancelar" Content="CANCELAR" Height="35" Width="100" Background="#9E9E9E" Foreground="White" FontWeight="Bold" Click="btnCancelar_Click" Visibility="Collapsed"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- PANEL DERECHO: TABLA -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Inventario Actual" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

            <DataGrid x:Name="dgHardware" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding idHardware}" Width="40"/>
                    <DataGridTextColumn Header="Serie" Binding="{Binding Serie}" Width="*"/>
                    <DataGridTextColumn Header="Modelo" Binding="{Binding NombreModelo}" Width="*"/>
                    <DataGridTextColumn Header="Ubicación" Binding="{Binding NombreUbicacion}" Width="*"/>
                    <DataGridTextColumn Header="Estado" Binding="{Binding Estado}" Width="80"/>

                    <!-- COLUMNA ACCIONES -->
                    <DataGridTemplateColumn Header="Acciones" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Editar" Margin="2" Padding="5,0" Background="#2196F3" Foreground="White" Click="btnEditar_Click"/>
                                    <Button Content="Eliminar" Margin="2" Padding="5,0" Background="#F44336" Foreground="White" Click="btnEliminar_Click"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>