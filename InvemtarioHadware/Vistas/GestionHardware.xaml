<Window x:Class="InvemtarioHadware.Vistas.GestionHardware"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Hardware" Height="500" Width="800" WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,0,10,0">
            <StackPanel>
                <TextBlock Text="Registro de Activo" FontWeight="Bold" FontSize="16" Margin="0,0,0,15" HorizontalAlignment="Center"/>

                <Label Content="Número de Serie:"/>
                <TextBox x:Name="txtSerie" Height="25" Margin="0,0,0,10"/>

                <Label Content="Modelo:"/>
                <ComboBox x:Name="cbModelo" Height="25" Margin="0,0,0,10" 
                          DisplayMemberPath="NombreModelo" SelectedValuePath="idModelo"/>

                <Label Content="Ubicación:"/>
                <ComboBox x:Name="cbUbicacion" Height="25" Margin="0,0,0,10"
                          DisplayMemberPath="NombreUbicacion" SelectedValuePath="idUbicacion"/>

                <Label Content="Fecha de Compra:"/>
                <DatePicker x:Name="dpFechaCompra" Height="25" Margin="0,0,0,10"/>

                <Label Content="Estado Actual:"/>
                <ComboBox x:Name="cbEstado" Height="25" Margin="0,0,0,20">
                    <ComboBoxItem Content="Operativo" IsSelected="True"/>
                    <ComboBoxItem Content="En Reparación"/>
                    <ComboBoxItem Content="Obsoleto"/>
                    <ComboBoxItem Content="Baja"/>
                </ComboBox>

                <Button x:Name="btnGuardar" Content="GUARDAR" Height="30" Background="#4CAF50" Foreground="White" FontWeight="Bold" Margin="0,0,0,10" Click="btnGuardar_Click"/>
                <Button x:Name="btnEliminar" Content="ELIMINAR SELECCIONADO" Height="30" Background="#F44336" Foreground="White" Margin="0,0,0,10" Click="btnEliminar_Click"/>
                <Button x:Name="btnLimpiar" Content="Limpiar Campos" Height="25" Click="btnLimpiar_Click"/>
                
            </StackPanel>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Inventario Actual" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

            <DataGrid x:Name="dgHardware" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="dgHardware_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding idHardware}" Width="40"/>
                    <DataGridTextColumn Header="Serie" Binding="{Binding Serie}" Width="*"/>
                    <DataGridTextColumn Header="Modelo" Binding="{Binding NombreModelo}" Width="*"/>
                    <DataGridTextColumn Header="Ubicación" Binding="{Binding NombreUbicacion}" Width="*"/>
                    <DataGridTextColumn Header="Estado" Binding="{Binding Estado}" Width="80"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>