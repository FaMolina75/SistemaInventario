<Window x:Class="InvemtarioHadware.Vistas.GestionProveedores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Proveedores" Height="300" Width="500" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="0,0,10,0">
            <TextBlock Text="Nuevo Proveedor" FontWeight="Bold" Margin="0,0,0,10"/>

            <Label Content="Nombre Empresa:"/>
            <TextBox x:Name="txtNombre" Height="25" Margin="0,0,0,5"/>

            <Label Content="Teléfono:"/>
            <TextBox x:Name="txtTelefono" Height="25" Margin="0,0,0,15"/>

            <Button x:Name="btnGuardar" Content="GUARDAR" Background="#4CAF50" Foreground="White" Height="30" Click="btnGuardar_Click"/>
        </StackPanel>

        <DataGrid x:Name="dgProveedores" Grid.Column="1" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding idProveedor}" Width="30"/>
                <DataGridTextColumn Header="Nombre" Binding="{Binding NombreProveedor}" Width="*"/>
                <DataGridTextColumn Header="Tel" Binding="{Binding Telefono}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>