<Window x:Class="InvemtarioHadware.Vistas.GestionUsuarios"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Administración de Usuarios" Height="400" Width="650" WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" BorderBrush="#3F51B5" BorderThickness="1" CornerRadius="5" Padding="15" Margin="0,0,10,0">
            <StackPanel>
                <TextBlock Text="Nuevo Usuario" FontWeight="Bold" FontSize="16" Foreground="#3F51B5" Margin="0,0,0,15" HorizontalAlignment="Center"/>

                <Label Content="Nombre de Usuario (Login):"/>
                <TextBox x:Name="txtUsername" Height="25" Margin="0,0,0,10"/>

                <Label Content="Contraseña:"/>
                <PasswordBox x:Name="txtPassword" Height="25" Margin="0,0,0,10"/>

                <Label Content="Rol / Permisos:"/>
                <ComboBox x:Name="cbRol" Height="25" Margin="0,0,0,20" DisplayMemberPath="NombreRol" SelectedValuePath="idRol" SelectionChanged="cbRol_SelectionChanged"/>

                <Button x:Name="btnGuardar" Content="CREAR USUARIO" Height="35" Background="#3F51B5" Foreground="White" FontWeight="Bold" Click="btnGuardar_Click"/>

                <TextBlock Text="*La contraseña se guardará encriptada." FontSize="10" Foreground="Gray" Margin="0,10,0,0" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Usuarios del Sistema" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

            <DataGrid x:Name="dgUsuarios" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding idUsuario}" Width="40"/>
                    <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="*"/>
                    <DataGridTextColumn Header="Rol" Binding="{Binding NombreRol}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>