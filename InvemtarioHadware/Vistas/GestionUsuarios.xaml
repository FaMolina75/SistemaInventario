<Window x:Class="InvemtarioHadware.Vistas.GestionUsuarios"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Administración de Usuarios" Height="450" Width="750" WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- PANEL IZQUIERDO: FORMULARIO -->
        <Border Grid.Column="0" BorderBrush="#3F51B5" BorderThickness="1" CornerRadius="5" Padding="15" Margin="0,0,10,0">
            <StackPanel>
                <TextBlock Text="Gestión de Usuario" FontWeight="Bold" FontSize="16" Foreground="#3F51B5" Margin="0,0,0,15" HorizontalAlignment="Center"/>

                <Label Content="Nombre de Usuario (Login):"/>
                <TextBox x:Name="txtUsername" Height="25" Margin="0,0,0,10"/>

                <Label Content="Contraseña:"/>
                <PasswordBox x:Name="txtPassword" Height="25" Margin="0,0,0,5"/>
                <TextBlock x:Name="lblInfoPass" Text="(Dejar vacío para mantener la actual)" FontSize="10" Foreground="Gray" Margin="0,0,0,10" Visibility="Collapsed"/>

                <Label Content="Rol / Permisos:"/>
                <ComboBox x:Name="cbRol" Height="25" Margin="0,0,0,20" DisplayMemberPath="NombreRol" SelectedValuePath="idRol"/>

                <!-- Botones del Formulario -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="btnGuardar" Content="CREAR" Height="35" Width="100" Background="#3F51B5" Foreground="White" FontWeight="Bold" Click="btnGuardar_Click" Margin="0,0,5,0"/>
                    <Button x:Name="btnCancelar" Content="CANCELAR" Height="35" Width="100" Background="#9E9E9E" Foreground="White" FontWeight="Bold" Click="btnCancelar_Click" Visibility="Collapsed"/>
                </StackPanel>

                <TextBlock Text="*La contraseña se guardará encriptada (SHA256)." FontSize="10" Foreground="Gray" Margin="0,15,0,0" TextWrapping="Wrap" TextAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- PANEL DERECHO: TABLA -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Lista de Usuarios" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

            <DataGrid x:Name="dgUsuarios" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding idUsuario}" Width="40"/>
                    <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="*"/>
                    <DataGridTextColumn Header="Rol" Binding="{Binding NombreRol}" Width="100"/>

                    <!-- COLUMNA DE ACCIONES -->
                    <DataGridTemplateColumn Header="Acciones" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Editar" Margin="2" Padding="5,0" Background="#2196F3" Foreground="White" Click="btnEditar_Click"/>
                                    <Button Content="Eliminar" Margin="2" Padding="5,0" Background="#F44336" Foreground="White" Click="btnEliminar_Click"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>