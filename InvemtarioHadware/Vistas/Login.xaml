<Window x:Class="InvemtarioHadware.Vistas.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Acceso al Sistema" Height="350" Width="300" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None">

    <Border BorderBrush="#2196F3" BorderThickness="1">
        <StackPanel VerticalAlignment="Center" Margin="20">
            <TextBlock Text="INVENTARIO IT" FontWeight="Bold" FontSize="24" HorizontalAlignment="Center" Foreground="#2196F3" Margin="0,0,0,30"/>

            <Label Content="Usuario:"/>
            <TextBox x:Name="txtUser" Height="30" Margin="0,0,0,10"/>

            <Label Content="Contraseña:"/>
            <PasswordBox x:Name="txtPass" Height="30" Margin="0,0,0,20"/>

            <Button Content="INICIAR SESIÓN" Height="40" Background="#2196F3" Foreground="White" FontWeight="Bold" Click="btnLogin_Click"/>
            <Button Content="Salir" Height="30" Margin="0,10,0,0" Background="Transparent" BorderBrush="Transparent" Foreground="Gray" Click="btnSalir_Click"/>
        </StackPanel>
    </Border>
</Window>